{% extends 'PPEM2LBundle:Default:layout.html.twig' %}
{% block body %}

<div class="edit_actualite">
	<span class="titre_back">Modification de l'actualit√©</span>
		{{ form_start(form) }}

				<div class="input_form_register">
					{{ form_label(form.titre, "Titre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					<br/>
					{{ form_errors(form.titre) }}
					{{ form_widget(form.titre, {'label_attr': {'class': 'from-control'}}) }}
					<br/>
				</div>

				<div class="input_form_register">
					{{ form_label(form.contenu, "Contenu", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					<br/>
					{{ form_errors(form.contenu) }}
					{{ form_widget(form.contenu, {'label_attr': {'class': 'from-control'}}) }}
					<br/>
				</div>

				<img src="{{ asset('media/image/' ~ image.filename) }}" class="img-responsive img-edit-actualite" />

				<div class="input_form_register">
					<br/>
					{{ form_errors(form.image) }}
					{{ form_widget(form.image, {'label_attr': {'class': 'from-control'}}) }}
					<br/>
				</div>

				{{ form_rest(form) }}

		{{ form_end(form) }}
</div>

{% endblock %}
