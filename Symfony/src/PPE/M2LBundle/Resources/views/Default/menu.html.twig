{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('bundles/ppem2l/css/menu.css') }}"/>
{% endblock %}

<div id="menu">
	
<a href="{{ path( 'ppem2_l_homepage' ) }}" id="logo_link"><img id="logo" src="{{ asset('bundles/ppem2l/img/logo.png') }}" alt=""></a>

	<ul id="center">
		<li><a href="{{ path( 'ppem2_l_informations' ) }}">Informations</a></li>
		<li><a href="{{ path( 'ppem2_l_reservations' ) }}">Réservations</a></li>
		<li><a href="{{ path( 'ppem2_l_annonces' ) }}">Annonces</a></li>
		<li><a href="{{ path( 'ppem2_l_formations' ) }}">Formations</a></li>
		<li><a href="{{ path( 'ppem2_l_ligues' ) }}">Ligues</a></li>
		<li><a href="{{ path( 'ppem2_l_contact' ) }}">Contact</a></li>
	</ul>
	<ul id="right">
		<li><a href="#">Connexion</a></li>
		<li><a href="#">Inscription</a></li>
		<li><a href="#">Mon compte</a></li>
	</ul>
<script>
	$( document ).ready(function() {
		$('li').hover(function(){ // cahnge le bckgrnd des li au hover
			$(this).css('background', '#154b77');
		},function(){
			$(this).css('background', '#18568C');
		});

		$(document).scroll(function() { // réduit le menu quand on scroll a plus de 10px
	    if( $(this).scrollTop() > 10 ) {
			$('#menu').animate({height : "30px"}, 300);
			$('#logo').animate({width : "25px"}, 300);
			$('#logo_link').animate({top : "0"}, 300);
			$('#menu > ul > li > a').animate({lineHeight :"30px"}, 300);
		}else{
			$('#menu').animate({height : "55px"}, 300);
			$('#logo').animate({width : "40px"}, 300);	
			$('#logo_link').animate({top : "5px"}, 300);
			$('#menu > ul > li > a').animate({lineHeight :"55px"}, 300);
		}
	});
});
</script>
</div>