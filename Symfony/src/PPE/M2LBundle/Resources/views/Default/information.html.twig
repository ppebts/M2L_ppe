{% extends 'PPEM2LBundle:Default:layout.html.twig' %}

{% block body %}
<div id="information_parent" class="block_shadow">
	{% for information in infoList %}
	    	<div class="information_block">
				<div class="information_titre closed">
	    		<h3>{{ information.titre|upper }}</h3>
	    		</div>
	    		<div class="information_content ">
	    		<p>{{ information.contenu }}</p>
				</div>
	    </div>
	{% endfor %}
</div>
<script>
		$(document).load(function(){
			$('.information_titre').first().trigger('click');
	})	
</script>
{% endblock %}