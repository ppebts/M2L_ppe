{% extends 'PPEM2LBundle:Default:layout.html.twig' %}
{% block body %}

<div class="list_annonces">
	<span class="titre_back">Annonces déposées</span>
<a href="{{ path( 'ppe_m2l_back_annonces' ) }}">Ajouter</a>
<table border="1" cellspacing="0">
	<thead>
			<th>Id</th>
			<th>Titre</th>
			<th>Description</th>
			<th>Image</th>
			<th>Prix</th>
			<th colspan="2">Edition</th>
	</thead>
{% for annonce in annonceList %}
	<tr>

			<td>{{ annonce.id }}</td>
			<td>{{ annonce.titre }}</td>
			<td>{{ annonce.description }}</td>
			<td>{{ annonce.image }}</td>
			<td>{{ annonce.prix }}</td>
			
			<td><a href="{{ path( 'ppe_m2l_back_annonceedit',{'id': annonce.id}   ) }}"><img style="width:30px" src="{{ asset('bundles/ppem2l/img/logos/edit.png') }}"/></a></td>
			<td><a href="{{ path( 'ppe_m2l_back_delete_annonces',{'id': annonce.id}   ) }}"><img style="width:30px" src="{{ asset('bundles/ppem2l/img/logos/delete.png') }}"/></a></td>
	</tr>

{% endfor %}
	</tbody>
</table>
</div>

{% endblock %}
