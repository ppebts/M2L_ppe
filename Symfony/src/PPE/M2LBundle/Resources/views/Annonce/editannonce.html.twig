{% extends 'PPEM2LBundle:Default:layout.html.twig' %}
{% block body %}

<div class="edit_back">
	<span class="titre_back">Modification de l'annonce</span>
		{{ form_start(form) }}

				<div class="input_form_register">
					{{ form_label(form.titre, "Titre", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					<br/>
					{{ form_errors(form.titre) }}
					{{ form_widget(form.titre, {'label_attr': {'class': 'from-control'}}) }}
					<br/>
				</div>
				<br/>
					<div class="img-edit-container">
						<img src="{{ asset('media/image/' ~ image.filename) }}" class="img-responsive image img-edit-formation" />
						<br/>
						<img class="edit-logo" src="{{ asset('bundles/ppem2l/img/logos/edit.png') }}">
					</div>
					
					<div class="input_form_register" style="display:none" id="upload-img">
						{{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
						<br/>
						{{ form_errors(form.image) }}
						<div class="upload">
							{{ form_widget(form.image, {'label_attr': {'class': 'from-control'}}) }}
						</div>
						<br/>
					</div>

				<div class="input_form_register">
					{{ form_label(form.description, "Description", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					<br/>
					{{ form_errors(form.description) }}
					{{ form_widget(form.description, {'label_attr': {'class': 'from-control'}}) }}
					<br/>
				</div>

				<div class="input_form_register">
					{{ form_label(form.prix, "Prix", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					<br/>
					{{ form_errors(form.prix) }}
					{{ form_widget(form.prix, {'label_attr': {'class': 'from-control'}}) }}
					<br/>
				</div>

				<div class="input_form_register">
					{{ form_label(form.utilisateur, "Utilisateur", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					<br/>
					{{ form_errors(form.utilisateur) }}
					{{ form_widget(form.utilisateur, {'label_attr': {'class': 'from-control'}}) }}
					<br/>
				</div>

				{{ form_rest(form) }}

		{{ form_end(form) }}
</div>

{% endblock %}
